<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dress.collocation.mapper.UserDao">
    <resultMap type="com.dress.collocation.pojo.User" id="user">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="user_pwd" property="userPwd"/>
        <result column="user_nick" property="userNick"/>
        <result column="email" property="email"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="sex" property="sex"/>
        <result column="attributes" property="attributes"/>
        <result column="last_login_time" property="lastLoginTime"/>
        <result column="gmt_create" property="gmtCreate"/>
        <result column="gmt_update" property="gmtUpdate"/>
    </resultMap>
    <sql id="selectKey">
    user_id,user_name,user_nick,user_pwd,email,phone_number,sex,attributes,last_login_time,gmt_create,gmt_update
    </sql>
    <insert id="addUser" parameterType="com.dress.collocation.pojo.User" useGeneratedKeys="true" keyProperty="userId">
        INSERT INTO sys_user
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="userName!=null">user_name,</if>
            <if test="userPwd!=null">user_pwd,</if>
            <if test="userNick!=null">user_nick,</if>
            <if test="email!=null">email,</if>
            <if test="phoneNumber!=null">phone_number,</if>
            <if test="sex!=null">sex,</if>
            <if test="attributes!=null">attributes,</if>
            <if test="lastLoginTime!=null">last_login_time,</if>
            <if test="gmtCreate!=null">gmt_create,</if>
            <if test="gmtUpdate!=null">gmt_update,</if>
        </trim>
        VALUES
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="userName!=null">#{userName},</if>
            <if test="userPwd!=null">#{userPwd},</if>
            <if test="userNick!=null">#{userNick},</if>
            <if test="email!=null">#{email},</if>
            <if test="phoneNumber!=null">#{phoneNumber},</if>
            <if test="sex!=null">#{sex},</if>
            <if test="attributes!=null">#{attributes},</if>
            <if test="lastLoginTime!=null">#{lastLoginTime},</if>
            <if test="gmtCreate!=null">#{gmtCreate},</if>
            <if test="gmtUpdate!=null">#{gmtUpdate},</if>
        </trim>

    </insert>

    <update id="updateUserByUserId" parameterType="com.dress.collocation.pojo.User">
        update sys_user
        <set>
            <if test="userName!=null">user_name=#{userName},</if>
            <if test="userPwd!=null">user_pwd=#{userPwd},</if>
            <if test="userNick!=null">user_nick=#{userNick},</if>
            <if test="email!=null">email=#{email},</if>
            <if test="phoneNumber!=null">phone_number=#{phoneNumber},</if>
            <if test="sex!=null">sex=#{sex},</if>
            <if test="attributes!=null">attributes=#{attributes},</if>
            <if test="lastLoginTime!=null">last_login_time=#{lastLoginTime},</if>
            <if test="gmtCreate!=null">gmt_create=#{gmtCreate},</if>
            <if test="gmtUpdate!=null">gmt_update=#{gmtUpdate},</if>
        </set>
        where user_id = #{userId}
    </update>

    <select id="getUserByUserName" resultMap="user">
        select
        <include refid="selectKey"/>
        from sys_user where user_name = #{userName}
    </select>

    <select id="getUserByUserId" resultMap="user">
        select
        <include refid="selectKey"/>
        from sys_user where user_id = #{userId}
    </select>

    <select id="getCountByUserName" resultType="int">
        select count(1) from sys_user where user_name = #{userName} or email = #{userName} or phone_number = #{userName}
    </select>

</mapper>